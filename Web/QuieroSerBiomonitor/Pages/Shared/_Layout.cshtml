<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AWAQ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/listaEspecies.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

</head>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
        <a class="navbar-brand" href="~/">
            <img src="~/img/AWAQHLogo.png" alt="AWAQ Logo" style="height: auto; width: 120px;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-page="/Index">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-page="/Info">Quiero Ser Biomonitor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="https://www.somosawaq.org" target="_blank">AWAQ Estaciones Biológicas</a>
                </li>

                <!-- Aparece boton de créditos solo si no está loggeado -->
                @if (Context.Session.GetString("UserRole") == null)
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Creditos">Sobre los creadores</a>
                    </li>
                }

                <!-- Aparece boton de dashboard correspondiente si es admin o usuario loggeado -->
                @if (Context.Session.GetString("UserRole") == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/DashboardAdmin">Dashboard Administrador</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Reg">Registrar Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/ListaEspecies">Lista de Especies</a>
                    </li>
                }
                @if (Context.Session.GetString("UserRole") == "User")
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/DashboardUser">Dashboard Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/ChangePassword">Actualizar Contraseña</a>
                    </li>
                }
            </ul>
        </div>

        <!--Se cambia boton de iniciar sesion si ya inicio sesion el usuario-->
        @if (Context.Session.GetString("UserEmail") != null)
        {
            @:<!-- Logout Button -->
            <form method="post" asp-page="/Logout" class="form-inline btn-format">
                <button type="submit" class="btn btn-link nav-link btn rounded-pill sign-in-button">Cerrar Sesión</button>
            </form>

        }
        else if (!Context.Request.Path.Value.Contains("/SignIn", StringComparison.OrdinalIgnoreCase))
        {
            <div class="btn-format">
                <a class="nav-link btn rounded-pill sign-in-button" href="/SignIn">Iniciar Sesión</a>
            </div>
        }

    </nav>
</header>


<main role="main" class="pb-3">
    @RenderBody()
</main>

@if (Context.Request.Path.Value.Equals("/", StringComparison.OrdinalIgnoreCase))
    {
    <footer class="page-footer mt-auto py-3">
        <div class="container">
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div class="col btn-format">
                                <a href="https://www.somosawaq.org/contact" target="_blank" class="btn-format-text btn  text-dark btn-lg active rounded-pill" role="button" aria-pressed="true">Contáctanos</a>
                            </div>
                        </td>
                        <td class="text-light">
                            C/Doctor Torres Feced 20, Casa19 - 28770 Colmenar Viejo (España)
                            <br>
                            info@somosawaq.org
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </footer>
    }

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</html>
