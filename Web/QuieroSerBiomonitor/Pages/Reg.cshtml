@page
@model RegModel
@{
    ViewData["Title"] = "Registro Usuario";
}


<body class="reg-user">
    <div class="form-container mt-5">
        <h2 class="mb-4 text-center">Registro de Usuario</h2>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info" role="alert">
                @Model.Message
            </div>
        }

        <form method="post" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" required="" data-val="true" data-val-required="El nombre es requerido." name="nombre" value="">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="Apellido">Apellido</label>
                    <input type="text" class="form-control" id="apellido" required="" data-val="true" data-val-required="El apellido es requerido." name="apellido" value="">
                </div>
            </div>
            <div class="form-group">
                <label for="Genero">Género</label>
                <select class="form-control" id="genero" data-val="true" data-val-required="El género es recerido" name="genero">
                    <option value="">Seleccione... </option>
                    <option value="H">Masculino</option>
                    <option value="M">Femenino</option>
                    <option value="-">Otro</option>
                </select>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="Ciudad">Ciudad</label>
                    <input type="text" class="form-control" id="ciudad" required data-val="true" data-val-required="La ciudad es requerida." name="ciudad" value="">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Pais">País</label>
                    <input type="text" class="form-control" id="pais" required data-val="true" data-val-required="El pais es requerido." name="pais" value="">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="FechaNacimiento">Fec. Nac.</label>
                    <input type="date" class="form-control" id="fechaNacimiento" required="" data-val="true" data-val-required="La fecha de nacimiento es requerida." name="fechaNacimiento" value="01-01-01">
                </div>
            </div>
            <div class="form-group">
                <label for="Correo">Correo Electrónico</label>
                <input type="email" class="form-control" id="correo" required="" data-val="true" data-val-required="El correo es requerido" name="correo" value="">
            </div>
            <br />
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="pass_word" required="" data-val="true" data-val-required="La contraseña es requerida." name="pass_word">
            </div>
            <div class="p-3 text-center">
                <input id="Submit1" type="submit" value="Registrar Usuario" class="btn btn-primary" />
            </div>

            <!-- Add the following JavaScript snippet -->
            <script>const dateInput = document.getElementById('fechaNacimiento');
                const today = new Date().toISOString().split('T')[0];
                dateInput.max = today; // Set the maximum date to today</script>

        </form>
    </div>
</body>
