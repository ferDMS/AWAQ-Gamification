@page
@model SignInModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<!DOCTYPE html>
<html lang="en">
<body class="background-signin">
    <div class="text-center">
        <div class="container">
            <h1>¡Bienvenid@@!</h1>
        </div>

        <div class="form-container">
            <form method="post" class="form-group">
                <div class="px-4">
                    <div class="p-3">
                        <label for="emailInput" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" type="text" class="form-control" id="emailInput" placeholder="user@awaq.org">
                    </div>
                    <div class="p-3">
                        <label for="passWord" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" id="passWord" placeholder="*****">
                    </div>

                    <div class="p-3">
                        <input id="Submit1" type="submit" value="Ingresar" />
                    </div>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info">@Model.Message</div>
            }
        </div>
    </div>
</body>
</html>
